{
  "name": "es6-webpack-boilerplate",
  "title": "An ES6 Boilerplate",
  "description": "My personal ES6 boilerplate built with Babel 7, Webpack 4, PostCSS, Jest, ESLint, and Stylelint.",
  "url": "URL",
  "author": "Vijay Dubb",
  "copyright": "2013",
  "version": "3.1.0",
  "license": "MIT",
  "main": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/VD39/es6-webpack-boilerplate.git"
  },
  "scripts": {
    "build": "webpack -p --progress --config config/webpack.prod.babel.js",
    "lint:css": "stylelint --ignore-path .gitignore \"src/**/*.css\"",
    "lint:js": "eslint --ignore-path .gitignore src/**/*.js",
    "lint:fix": "yarn lint:css --fix && yarn lint:js --fix",
    "serve": "webpack-dev-server -d --progress --color --open --config config/webpack.dev.babel.js",
    "test": "jest src",
    "test:watch": "yarn jest src --watch --notify"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:fix"
    }
  },
  "dependencies": {
    "core-js": "^3.6.5",
    "regenerator-runtime": "^0.13.5"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/plugin-transform-modules-commonjs": "^7.10.1",
    "@babel/plugin-transform-runtime": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/register": "^7.9.0",
    "@babel/runtime": "^7.10.2",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.0.1",
    "babel-loader": "^8.1.0",
    "babel-plugin-rewire": "^1.2.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.0.1",
    "css-loader": "^3.5.3",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-webpack": "^0.12.1",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "mini-css-extract-plugin": "^0.9.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-easy-import": "^3.0.0",
    "postcss-loader": "^3.0.0",
    "postcss-mixins": "^6.2.3",
    "postcss-nested": "^4.2.1",
    "postcss-preset-env": "^6.7.0",
    "postcss-simple-vars": "^5.0.2",
    "postcss-url": "^8.0.0",
    "prettier": "^2.0.5",
    "raw-loader": "^4.0.1",
    "stylelint": "^13.5.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-webpack-plugin": "^2.0.0",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "url-loader": "^4.1.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^4.2.2"
  },
  "keywords": [
    "Babel",
    "Boilerplate",
    "ES6",
    "ESLint",
    "Husky",
    "Jest",
    "PostCSS",
    "Stylelint",
    "Webpack 4"
  ]
}
